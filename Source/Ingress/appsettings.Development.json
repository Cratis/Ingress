{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Information",
            "Microsoft.Hosting.Lifetime": "Information",
            "Yarp": "Information",
            "Cratis": "Debug"
        }
    },

    "Authentication": {
        "OpenIdConnect": {
            "Authority": "https://login.microsoftonline.com/<tenant-id>/v2.0",
            "ClientId": "<client-id>",
            "ClientSecret": "<client-secret>",
            "ResponseType": "code",
            "Scope": ["openid", "profile", "email"]
        },
        "JwtBearer": {
            "Authority": "https://login.microsoftonline.com/<tenant-id>/v2.0",
            "Audience": "<client-id>"
        }
    },

    "Ingress": {
        "Tenants": {
            "e18fd8e4-8b8b-4b8b-8b8b-8b8b8b8b8b8b": {
                "Name": "Development Tenant",
                "Domains": ["localhost"],
                "SourceIdentifiers": []
            }
        },
        "TenantResolutions": [
            {
                "Strategy": "Host"
            }
        ],
        "Microservices": {
            "main": {
                "Backend": {
                    "BaseUrl": "http://localhost:5001/"
                },
                "Frontend": {
                    "BaseUrl": "http://localhost:3000/"
                }
            }
        }
    }
}
